<body id="page-top">

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg bg-secondary fixed-top text-uppercase" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll-trigger" href="#page-top">ToDo? Tada!</a>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item mx-0 mx-lg-1">
          <a id="logRegBtn" class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger">Login/Register</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Header -->
  <header class="masthead bg-primary text-white text-center">
    <div class="container">
      <h1 class="text-uppercase mb-0">Add To A List</h1>
    </br>
      <form id="new-item-form">
        <textarea id="item-input-field" name="text" placeholder="What would you like to add?"></textarea>
        </br>
        <input class="action-button shadow animate blue" type="submit" value="TaDa!">
      </form>
    </div>
  </header>

  <!-- Portfolio Grid Section -->
  <section class="portfolio" id="portfolio">
    <div class="container">
      <h2 class="text-center text-uppercase text-secondary mb-0">Lists</h2>
    </br>
      <div class="row">
        <div class="col-sm col-sm">
          <a class="portfolio-item d-block mx-auto foods">
            <div class="portfolio-item-caption d-flex position-absolute h-100 w-100">
              <div class="portfolio-item-caption-content my-auto w-100 text-center text-white">
              </div>
            </div>
            <img class="img-fluid" src="img/foods.png" alt="">
          </a>
        </div>
        <div class="col-sm col-sm">
          <a class="portfolio-item d-block mx-auto products">
            <div class="portfolio-item-caption d-flex position-absolute h-100 w-100">
              <div class="portfolio-item-caption-content my-auto w-100 text-center text-white">
              </div>
            </div>
            <img class="img-fluid" src="img/products.png" alt="">
          </a>
        </div>
        <div class="col-sm col-sm">
          <a class="portfolio-item d-block mx-auto movies">
            <div class="portfolio-item-caption d-flex position-absolute h-100 w-100">
              <div class="portfolio-item-caption-content my-auto w-100 text-center text-white">
              </div>
            </div>
            <img class="img-fluid" src="img/movies.png" alt="">
          </a>
        </div>
        <div class="col-sm col-sm">
          <a class="portfolio-item d-block mx-auto books">
            <div class="portfolio-item-caption d-flex position-absolute h-100 w-100">
              <div class="portfolio-item-caption-content my-auto w-100 text-center text-white">
              </div>
            </div>
            <img class="img-fluid" src="img/books.png" alt="">
          </a>
        </div>
      </div>
      <div id='noneHolder'>
        <!-- list populated here -->
      </div>
      <div id='catdHolder'>
        <!-- list populated here -->
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer text-center">
    <div class="container">
      <div class="row">
        <div class="col-md-4 mb-5 mb-lg-0">
          <h4 class="text-uppercase mb-4">Created By</h4>
          <p class="lead mb-0">Jacob Maarse &
            <br>Michael Rychly</p>
        </div>
      </div>
    </div>
  </footer>

  <div class="copyright py-4 text-center text-white">
    <div class="container">
      <small>Copyright &copy; ToDo? TaDa! 2018</small>
    </div>
  </div>

  <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
  <div class="scroll-to-top d-lg-none position-fixed ">
    <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
      <i class="fa fa-chevron-up"></i>
    </a>
  </div>

  <div id="id01" class="modal">
      <form class="modal-content animate loginForm">
        <div class="imgcontainer">
          <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
          <img src="../img/img_avatar2.jpg" alt="Avatar" class="avatar">
        </div>
        <div class="container">
          <label for="uname"><b>Username</b></label>
          <input id="username-field" type="text" placeholder="Enter Username" name="uname">
    
          <label for="psw"><b>Password</b></label>
          <input id="password-field" type="text" placeholder="Enter Password" name="psw">
        </div>
    
        <div class="container" style="background-color:#f1f1f1">
            <button class="modalbtn login" type="submit">Login</button>
            <button class="modalbtn register" type="submit">Register</button>  
        </br>
            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="modalbtn cancelbtn">Cancel</button>
        </div>
        
      </form>
    </div>

    <div id="id02" class="modal">
        <form class="modal-content-edit animate updateForm">
          <div class="imgcontainer">
            <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close Modal">&times;</span>
            <i class="fa fa-edit modalEdit"></i>
          </div>
          <div class="container">
            <label for="uname"><b>Change Item</b></label>
            <input id="item-update-field" type="text" placeholder="" name="updatedItemText">
            <label for="select"><b>Change Category: </b></label>
            <select id="catDropDown">
                <option value="0"></option>
                <option value="2">foods</option>
                <option value="4">products</option>
                <option value="1">movies</option>
                <option value="3">books</option>
              </select>
          </div>
          <div class="container" style="background-color:#f1f1f1">
              <button class="modalbtn" type="submit">Submit</button> 
              <button type="button" onclick="document.getElementById('id02').style.display='none'" class="modalbtn cancelbtn">Cancel</button>
          </div>
        </form>
      </div>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

